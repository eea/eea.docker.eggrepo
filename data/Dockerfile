FROM busybox

MAINTAINER "Vitalie Maldur" <vitalie.maldur@eaudeweb.ro>

## EGG_REPO STORAGE PATH
ENV EGG_REPO_STORAGE /var/local/eggrepo
ENV MIRROR_STORAGE /var/local/pypi

RUN mkdir -p $EGG_REPO_STORAGE
RUN mkdir -p $MIRROR_STORAGE
RUN chown -R 1000:1000 $MIRROR_STORAGE

VOLUME $EGG_REPO_STORAGE
VOLUME $MIRROR_STORAGE
